@inherits LayoutComponentBase

<div class="page skalmejen-page">
    <div class="skalmejen-page-bg">
        <main class="skalmejen-page-content-container">
            @if(_session != null) 
            {
                <CascadingValue Value="_session">
                    @Body
                </CascadingValue>
            }
        </main>
    </div>
</div>

<script>
    window.transferScreenWidth = () => window.innerWidth;
    window.transferScreenHeight = () => window.innerHeight;
    window.transferUserAgent = () => navigator.userAgent;
    window.setSkalmejenCookie = (screenSizeName, cookieName) => document.cookie = (cookieName + "=" + screenSizeName);
</script>